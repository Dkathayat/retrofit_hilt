<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.fragments.SplashHomeFragment">

    <ImageView
        android:id="@+id/splashMainImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_shopping_bag_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/archivo_black"
        android:text="Happid"
        android:textColor="@color/main_happid_color"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/splashMainImage"
        app:layout_constraintStart_toStartOf="@+id/splashMainImage"
        app:layout_constraintTop_toBottomOf="@+id/splashMainImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/shopping_img2"
        app:layout_constraintBottom_toTopOf="@+id/splashMainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shopping_img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toEndOf="@+id/shapeableImg1"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/shopping_img3"
        app:layout_constraintEnd_toStartOf="@+id/splashMainImage"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shopping_img4"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImg3"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:background="@drawable/shopping_img5"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.282"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/shopping_img3"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImg7"
        app:layout_constraintVertical_bias="0.146"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImg7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shopping_img2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/splashMainImage"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedImageViewRoundedRecyler" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Find Nearest Local\nMarket"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>